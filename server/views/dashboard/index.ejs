    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <!-- Logo -->
        <div class="navbar-brand">
            <img src="logo.png" alt="Logo" width="80" height="80">
        </div>
        <!-- Menü-Button -->
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <!-- Navigations-Elemente -->
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/support-server"><i class="fas fa-headset"></i> Support-Server</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/get-invite-link"><i class="fas fa-link"></i> Einladungslink erhalten</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/servers"><i class="fas fa-server"></i> Server</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/discord"><i class="fab fa-discord"></i> Discord</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/profile"><i class="fas fa-user"></i> Ahmed Mondo</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/settings"><i class="fas fa-cog"></i> Einstellungen</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/notifications"><i class="fas fa-bell"></i> Benachrichtigungen</a>
                </li>
            </ul>
        </div>
    </nav>
    <!-- Seitenleiste -->
    <div class="sidebar bg-dark">
        <!-- Seitenleisten-Elemente -->
        <ul class="list-group list-group-flush">
            <li class="list-group-item list-group-item-dark list-group-item-action"><i class="fas fa-home"></i> Übersicht</li>
            <li class="list-group-item list-group-item-dark list-group-item-action"><i class="fas fa-chart-line"></i> Statistiken</li>
            <li class="list-group-item list-group-item-dark list-group-item-action"><i class="fas fa-ticket-alt"></i> Tickets</li>
            <li class="list-group-item list-group-item-dark list-group-item-action"><i class="fas fa-users"></i> Mitglieder</li>
            <li class="list-group-item list-group-item-dark list-group-item-action"><i class="fas fa-cogs"></i> Einstellungen</li>
            <li class="list-group-item list-group-item-dark list-group-item-action"><i class="fas fa-info-circle"></i> Über</li>
        </ul>
    </div>
    <!-- Hauptinhalt -->
    <div class="container-fluid">
        <!-- Titel -->
        <h1 class="text-white">Dashboard | System Bot</h1>
        <!-- Kartenbereich -->
        <div class="row">
            <!-- Karte für Gesamtzahl der Tickets -->
            <div class="col-lg-3 col-md-6 col-sm-12 mb-3">
                <div class="card bg-dark text-white">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="icon">
                                <i class="fas fa-print"></i>
                            </div>
                            <div class="info ms-3">
                                <h3>562</h3>
                                <p>Gesamtzahl der Tickets</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Karte für neue Tickets -->
            <div class="col-lg-3 col-md-6 col-sm-12 mb-3">
                <div class="card bg-dark text-white">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="icon">
                                <i class="fas fa-tag"></i>
                            </div>
                            <div class="info ms-3">
                                <h3>284</h3>
                                <p>Neue Tickets</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Karte für geschlossene Tickets -->
            <div class="col-lg-3 col-md-6 col-sm-12 mb-3">
                <div class="card bg-dark text-white">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="icon">
                                <i class="fas fa-shopping-cart"></i>
                            </div>
                            <div class="info ms-3">
                                <h3>356</h3>
                                <p>Geschlossene Tickets</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Karte für geschätzte Anzahl der gelösten Tickets -->
            <div class="col-lg-3 col-md-6 col-sm-12 mb-3">
                <div class="card bg-dark text-white">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="icon">
                                <i class="fas fa-chart-line"></i>
                            </div>
                            <div class="info ms-3">
                                <h3>562</h3>
                                <p>Geschätzte Anzahl der gelösten Tickets</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Diagrammbereich -->
        <div class="row">
            <div class="col-lg-8 col-md-12 col-sm-12 mb-3">
                <div class="card bg-dark text-white">
                    <div class="card-body">
                        <!-- Diagrammtitel -->
                        <h2>Geschätzte Anzahl der offenen Tickets</h2>
                        <!-- Diagramm -->
                        <canvas id="line-chart"></canvas>
                    </div>
                </div>
            </div>
            <!-- Server-Informationen-Bereich -->
            <div class="col-lg-4 col-md-12 col-sm-12 mb-3">
                <div class="card bg-dark text-white">
                    <div class="card-body">
                        <!-- Server-Informationen-Titel -->
                        <h2>Ahmed Mondo Server</h2>
                        <!-- Server-Informationen-Inhalt -->
                        <div class="server-info-content">
                            <!-- Server-Logo -->
                            <div class="server-logo">
                                <img src="discord.png" alt="Discord">
                            </div>
                            <!-- Server-Details -->
                            <div class="server-details">
                                <p>Server-Besitzer: Ahmed_Mondo#4553</p>
                                <p>999 Mitglieder</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Fußzeilenbereich -->
    <footer class="footer bg-dark text-white">
        <!-- Fußzeilen-Elemente -->
        <ul class="footer-items">
            <li><a href="/overview">Übersicht</a></li>
            <li><a href="/support">Support</a></li>
            <li><a href="/legal-and-privacy-policy">Rechtliches & Datenschutz</a></li>
        </ul>
        <!-- Fußzeilen-Text -->
        <div class="footer-text">
            <p>&copy; 2024 Alle Rechte vorbehalten | Ticket Manager</p>
        </div>
    </footer>
    <!-- Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.6.0.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.0.2/js/bootstrap.bundle.min.js"></script>
    <!-- Chart.js -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.5.1/chart.min.js"></script>
    <!-- Custom JS -->
    <script src="../js/dashboard.js"></script>
</body>
</html>